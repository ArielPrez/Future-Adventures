<div>
    {{#if adv}}
        <form action="/adventures/edit/{{adv.id}}" method="post">
        {{else}}
            <form action="/adventures/new" method="post">
            {{/if}}
            <div class="nameAdv">
                <label for="">Adventure Name</label>
                {{#if adv}}
                    <input name="name" type="text" value="{{adv.name}}">
                {{else}}
                    <input name="name" type="text">
                {{/if}}

                <label for="">Date
                </label>
                {{#if adv}}
                    <input type="date" name="date" id="date" value="{{adv.date}}"></div>
            {{else}}
                <input type="date" name="date" id="date"></div>
        {{/if}}

        <div class="textAdv">
            {{#if adv}}
                <textarea name="description">{{adv.description}}
                </textarea>
            {{else}}
                <textarea name="description">"Add a New Adventure ..."
                </textarea>
            {{/if}}

        </div>
        <div class="textForm">
            <button class="btn btn-primary" type="submit">[ + ]</button>
        </div>
    </form>
    {{#if message}}
        <br>
        <div id="mess">{{message}}</div>
        <br>
    {{/if}}
</div>