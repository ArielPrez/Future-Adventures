<div id="edituser">
    <h2>
        Editing: 
        {{user.username}}
    </h2>
<div class="userinput">
    <form action="/users/edit" method="post">
        <label for="">
            Name:
        </label>

        <input type="text" name="name" size="30" value="{{user.name}}">
        <label for="">
            Lastname:
        </label>

        <input type="text" name="lastname" size="30" value="{{user.lastname}}">

        <label for="">
            Username:
        </label>
        <input type="text" name="username" size="30" value="{{user.username}}">

        <label for="">
            Password:
        </label>
        <input
            type="password"
            name="password"
            size="30"
            placeholder="Password">

        <button class="btn btn-primary" type="submit">
            Edit
        </button>
        {{#if message}}
            <br>
            <div id="mess">{{message}}</div>
            <br>
        {{/if}}
    </form>
    </div>
</div>